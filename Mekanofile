bin = `node_modules/.bin` ;
ws = `doc/website` ;

Browserify: `$bin/browserify -de $ws/index.js > $out` ;
Copy: `cp $in $out` ;
Sass: `bundle exec sass $ws/index.sass $out` ;
ReduceEjs: `bin/util/reduce-ejs.js $in > $out` ;

doc/website/**/*.js Browserify -> dist/bundle.js ;
doc/website/**/*.sass Sass -> dist/bundle.css ;
doc/website/*.ejs ReduceEjs => dist/*.html ;
doc/website/*.woff Copy => dist/*.woff ;
doc/logo.svg Copy -> dist/logo.svg ;
