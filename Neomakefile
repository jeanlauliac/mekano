bin = `node_module/.bin`;
coffee = `$bin/coffee fubar`;

Concat: `cat $in > $out`;
Coffee: `$bin/coffee $in > $out`;
Minify: `$bin/minify < $in > $out`;

source/script/**/*.coffee
    Coffee => build/script/**/*.js
    Concat -> dist/concat.js;

dist/*.js
    Minify => dist/*.min.js
    :: all `Update all files`;
